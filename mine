end

function updateDirection(turn)
    --print("UpdateDirection()")
    direction = direction + 4
    if turn == 'R' then
        direction = direction + 1
    elseif turn == 'L' then
        direction = direction - 1
    else
        print("Error: Bad direction")
    end
    direction = direction % 4
    --pd()
    --print("End updateDirection")
end

function updatePath(direction)
    pathway.append(direction)




function pd()
    print("Direction = ", direction)
end

